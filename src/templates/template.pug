block variables

doctype html
html
	head
		meta(name="robots" content="noindex")
		meta(charset="utf-8")
		title #{title}
		meta(content="" name="description")
		meta(content="" name="keywords")
		meta(content="width=device-width, initial-scale=1" name="viewport")
		meta(content="ie=edge" http-equiv="x-ua-compatible")
		link(rel='stylesheet' href='styles.min.css')

		link(href="https://unpkg.com/video.js/dist/video-js.min.css" rel="stylesheet")
		script(src="https://unpkg.com/video.js/dist/video.min.js")
	body
		block content

	script(src="https://requirejs.org/docs/release/2.3.6/minified/require.js" defer)
	script(src='./js/bundle.js' defer )
	script(src='./js/framework.js' defer )
	script(type="text/javascript").
		document.addEventListener("DOMContentLoaded",function() {require(["app","index"]);},false);
